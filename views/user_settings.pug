extends layout

block content
    h1 #{title}
    form(method='POST', action='/users/:id/settings')
      .form-group
        label New email:
        input.form-control(name='email', type='email')
      .form-group
        label Type in your password to confirm changes:
        input.form-control(name='password' type='password') 
      br
      input.btn.btn-primary(type='submit', value='Submit')
